@import url(https://fonts.googleapis.com/css?family=Raleway:800)

medium_green = rgb(110, 110, 46) 
dark_green = rgb(75, 75, 62)

html
    height: 100%
body
    height: 100%
    text-align: center
    font-family: Helvetica, Verdana, sans-serif
    font-size: 12px
    margin: 0
    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    align-items: stretch
    background: center center/cover url("../img/splash/splashbg_xl.png")
    @media (max-width: 62em)
        &
            background: center center/cover url("../img/splash/splashbg_md.png")

header
    font-family: 'Raleway', sans-serif;
    padding: 5rem 0
    color: medium_green

            
    .logo
        height: 15em
        vertical-align: top

    h1
        margin: 0 .5em
        font-size: 6em

article
    font-family: 'Raleway', sans-serif;
    color: dark_green

    a
    a:visited
    a:active
    a:hover
        color: medium_green

    h2
        font-size: 2.5em
        color: dark_green

    #mc_embed_signup
        input[type="email"]
            border: 1px solid dark_green
            padding: 0.5em
        button
            border-radius: 0px
            background-color: medium_green
            border: 1px solid dark_green
            padding: 0.5em 1em
            color: white
footer
    padding: 1.5em 0
    font-size: 1.5em
    background-color: medium_green
    text-align: center

    a
    a:visited
    a:active
    a:hover
        color: white
        text-decoration: none
