@import url(https://fonts.googleapis.com/css?family=Raleway:800)

html
    height: 100%
body
    height: 100%
    font-family: Helvetica, Verdana, sans-serif
    font-size: 12px
    margin: 0
    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    align-items: stretch
    background: center center/cover url("../img/splash/splashbg_xl.png")
    @media (max-width: 62em)
        &
            background: center center/cover url("../img/splash/splashbg_md.png")

header
    text-align: center
    font-family: 'Raleway', sans-serif;
    font-size: 3em
    padding: 1rem
    color: rgb(110, 110, 46)

    h1
        margin: 0 .5em

    .logo
        height: 1em
        vertical-align: top

article
    font-family: 'Raleway', sans-serif;
    color: rgb(110, 110, 46)
    text-align: center

    h2
        font-size: 2.5em

    h3
        font-size: 2em

footer
    padding: 1.5em 0
    font-size: 1.5em
    background-color: rgb(91, 92, 54)
    text-align: center

    a
    a:visited
    a:active
    a:hover
        color: rgb(255, 255, 255)
        text-decoration: none
