@import url(https://fonts.googleapis.com/css?family=Raleway:800)

html
    height: 100%
body
    height: 100%
    font-family: Helvetica, Verdana, sans-serif
    font-size: 12px
    margin: 0
    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    align-items: stretch

article
    font-size: 4em
    text-align: center
    display: flex
    justify-content: center
    align-items: center
    height: 100%
    background: center center/cover url("../img/splash/splashbg_xl.png")
    @media (max-width: 62em)
        &
            background: center center/cover url("../img/splash/splashbg_md.png")
    h1
        margin: 0 .5em
        font-family: 'Raleway', sans-serif;
        color: rgb(110, 110, 46)

    .logo
        text-align: center

footer
    padding: 1.5em 0
    font-size: 1.5em
    background-color: rgb(91, 92, 54)
    text-align: center

    a
    a:visited
    a:active
    a:hover
        color: rgb(255, 255, 255)
        text-decoration: none
